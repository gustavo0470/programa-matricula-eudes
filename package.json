{
  "name": "sistema-de-matricula",
  "version": "1.0.0",
  "description": "Sistema de Matrículas - ONG Grupo Ação Solidária",
  "main": "electron/main-robust.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev -p 3007",
    "dev:https": "node server-https.js",
    "build": "next build",
    "export": "cross-env BUILD_ELECTRON=true next build",
    "start": "next start -p 3007",
    "start:https": "cross-env NODE_ENV=production node server-https.js",
    "lint": "next lint",
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup:database": "node scripts/setup-database.js",
    "setup:supabase": "node scripts/setup-supabase-bucket.js",
    "seed": "node scripts/seed-database.js",
    "test:system": "node scripts/test-system.js",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "build:production": "node scripts/build-production.js",
    "test:electron": "node scripts/test-electron.js",
    "debug:electron": "electron electron/main-debug.js",
    "generate:pwa-icons": "node scripts/generate-pwa-icons.js",
    "build:pwa": "node scripts/build-pwa.js",
    "test:pwa": "node scripts/test-pwa.js",
    "build:electron": "cross-env NODE_ENV=production BUILD_ELECTRON=true next build && electron-builder",
    "build:win": "npm run build:electron -- --win",
    "build:mac": "npm run build:electron -- --mac",
    "build:linux": "npm run build:electron -- --linux",
    "dist": "npm run build:electron",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3007 && electron .\""
  },
  "keywords": [
    "matricula",
    "ong",
    "gestao",
    "alunos"
  ],
  "author": "ONG Grupo Ação Solidária",
  "license": "ISC",
  "build": {
    "appId": "com.ongacao.sistema-matricula",
    "productName": "Sistema de Matrícula",
    "directories": {
      "output": "dist"
    },
    "files": [
      ".next/**/*",
      "electron/**/*",
      "prisma/**/*",
      "public/**/*",
      "app/**/*",
      "lib/**/*",
      "node_modules/.bin/next*",
      "package.json",
      "next.config.js"
    ],
    "asarUnpack": [
      "node_modules/@prisma/**/*",
      "node_modules/.prisma/**/*",
      "node_modules/prisma/**/*",
      ".next/**/*",
      "prisma/**/*"
    ],
    "extraResources": [
      {
        "from": "prisma",
        "to": "prisma"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "icon": "public/icon.icns",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png",
      "category": "Education"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-reload": "^1.5.0",
    "ts-node": "^10.9.2",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.14.0",
    "@supabase/supabase-js": "^2.56.0",
    "@types/node": "^24.3.0",
    "@types/react": "19.1.11",
    "autoprefixer": "^10.4.21",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.3.9",
    "framer-motion": "^12.23.12",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.541.0",
    "next": "^15.5.0",
    "postcss": "^8.5.6",
    "prisma": "^6.14.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "zod": "^4.1.1"
  }
}
